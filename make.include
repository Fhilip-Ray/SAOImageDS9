	@echo ""
	@echo "*** Installing ds9 ***"
	$(MAKE) -C ds9/$(OS) -j $(JOBS)

debug	: scrub ds9/$(OS)/Makefile
	@echo ""
	@echo "*** Installing ds9 ***"
	$(MAKE) -C ds9/$(OS)  -j $(JOBS) debug

ds9/$(OS)/Makefile :
	@echo ""
	@echo "*** Configure ds9 ***"
	cd ds9/$(OS); \
	./configure \
	$(WITHTK) \
	$(PREFIX) \
	$(STD)

