#--------------------------distclean

.PHONY	: distclean parsersclean

distclean: clean
	-rm -f Makefile config.cache config.log config.status
	-rm -rf autom4te.cache

parsersclean:
	-rm -f $(prefix)/ds9/library/*.output
	-rm -f $(prefix)/ds9/parsers/*.output $(prefix)/ds9/parsers/*.tcl
